{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':pinDevDependencies'
  ],
  packageRules: [
    // Auto merge
    {
      "description": "Auto merge GitHub Actions",
      "groupName": "github-actions",
      "matchDatasources": ["github-tags"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest", "pinDigest"],
      "automerge": true
    },
    // Containers
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest", "pinDigest"],
      "commitMessagePrefix": "chore({{depName}}): ",
      "groupName": "container digests",
      "automerge": true
    },
    {
      "matchFileNames": ["containers/**"],
      "matchUpdateTypes": ["patch"],
      "groupName": "patch containers",
      "commitMessagePrefix": "fix({{depName}}): "
    },
    {
      "matchFileNames": ["containers/**"],
      "matchUpdateTypes": ["minor"],
      "groupName": "minor containers",
      "commitMessagePrefix": "feat({{depName}}): "
    },
    {
      "matchFileNames": ["containers/**"],
      "matchUpdateTypes": ["major"],
      "groupName": "major containers",
      "commitMessagePrefix": "BREAKING CHANGE({{depName}}): "
    }
  ]
}
